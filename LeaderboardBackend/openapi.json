    "/leaderboards/create": {
      "post": {
        "tags": [
          "Leaderboards"
        ],
        "summary": "Creates a new leaderboard. This request is restricted to Administrators.",
        "operationId": "createLeaderboard",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateLeaderboardRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "400": {
            "description": "Bad Request",
